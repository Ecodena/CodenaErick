<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodenaErick.Login">
    <ContentPage.Content>
        <Grid>
            <BoxView Color="White" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30" />

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry x:Name="txtusuario" Placeholder="Usuario" PlaceholderColor="Gray"/>
                    <Entry x:Name="txtcontrasena" Placeholder="Contraseña" PlaceholderColor="Gray" IsPassword="True"/>
                    <Button x:Name="btnInicioCesion" Text="Iniciar Cesion" Clicked="btnInicioCesion_Clicked" TextColor="Black"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>